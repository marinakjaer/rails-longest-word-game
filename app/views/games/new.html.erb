<h1>New Game</h1>

<div class="letters">
  <% @game_letters.each do |letter| %>
  <div class="letter-box">
    <p><%= letter %></p>
  </div>
  <% end %>
</div>

<div class="container">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @game_letters %>
    <!-- <input name="<%= @game_letters %>" type="hidden"> -->
    <input class="search-bar" type="text" name="word" placeholder="Enter longest word">
    <input class="submit-button" type="submit">
  </form>
</div>
